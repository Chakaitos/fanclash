<div class="container">
<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { class: "form-horizontal", method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>Resend confirmation instructions</legend>
    <%= f.input :login %>

    <%= f.button :submit, class: 'btn-primary' %>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
</div>