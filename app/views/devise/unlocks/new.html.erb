<div class="container">
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { class: "form-horizontal", method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>Resend unlock instructions</legend>
	  <%= f.input :email %>

	  <%= f.button :submit, "Resend unlock instructions", class: 'btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
</div>