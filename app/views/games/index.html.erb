<h1>Today's Games</h1><br />

<div class="row">
	<div class="col-sm-12">
		<table class="table table-hover">
	  	<thead>
	  		<tr>
	  			<th>PRIZES</th>
	  			<th>SPORT</th>
	  			<th>BUY-IN</th>
	  			<th>ENTRIES</th>
	  			<th>START TIME</th>
	  			<th>ENTER</th>
	  			<th>LOCKS IN</th>
	  		</tr>
	  	</thead>
	  	<tbody>
				<% @games.each do |game| %>
					<tr>
					  <td><%= game.number_to_currency(game.prizes) %></td>
					  <td><%= game.sport %></td>
					  <td><%= game.number_to_currency(game.buy_in) %></td>
					  <td><%= game.entries %></td>
					  <td><%= game.start_time.strftime('%d %b, %Y - %I:%M%p (CST)') %></td>
					  <%= render 'games/countdown_cols', :game => game, :link_text => 'Play' %>
				  </tr>
				<% end %>
	  	</tbody>
		</table>
	</div>
</div>

<%= render 'games/countdown_script' %>